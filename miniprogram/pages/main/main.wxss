.daily {
    width: 100%;
    position: relative;
}

.dailyImg {
    width: 100%;
    height: 30vh;
}

.date {
    display: flex;
    height: 5vh;
    justify-content: flex-end;
    align-items: center;
    font-size: 15px;
    color: #999;
    margin-right: 3vw;
    font-family: 'Courier New', Courier, monospace;
}

.today {
    position: absolute;
    top: 30vh;
    transform: translateY(-60%);
    font-size: 70px;
    line-height: 70px;
    font-weight: 700;
}

.today::before {
    position: absolute;
    height: 60%;
    content: attr(hover-class);
    overflow: hidden;
    color: #fff;
    z-index: 999;
}

.label {
    width: 25vw;
    font-size: 40rpx;
    font-weight: 700;
    margin-left: 20rpx;
    border-bottom: 20rpx solid rgb(54, 241, 226);
    color: rgb(64, 156, 218);
    font-family: 'Courier New', Courier, monospace;
}

.dailySentence {
    display: flex;
    height: 35vh;
    flex-direction: column;
    font-family: 'Courier New', Courier, monospace;
   
}

.dailySentence:active {
    animation: shallow 3000ms;
}

@keyframes shallow {
    0% {
        color: #000;
    }

    50% {
        color: #fff;
    }

    100% {
        color: #000;
    }
}

.saying {
    padding: 30px;
}

.author {
    display: flex;
    justify-content: flex-end;
    margin-right: 30px;
}
.source{
    display: flex;
    justify-content: flex-end;
    margin-right: 30px;
    font-size: 20rpx;
    font-family: 'Courier New', Courier, monospace;
    color: #888888;
}

.dailyWords {
    height: 40vh;
}

.words {
    display: flex;
    width: 90%;
    height: 100rpx;
    margin: 0 auto;
    border-bottom: 10rpx solid #000;
}

.matts {
    position: relative;
    width: 60rpx;
    height: 60rpx;
    display: flex;
    flex-wrap: wrap;
    text-align: center;
    margin-right: 10rpx;
    border: 7rpx outset #f3f2f2;
}

.matts .word {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-size: 40rpx;
}

.matts :nth-child(1) {
    width: 29rpx;
    height: 30rpx;
    border-bottom: .5rpx dotted #bbb;
    border-right: .5rpx dotted #bbb;
}

.matts :nth-child(2) {
    width: 29rpx;
    height: 30rpx;
    border-bottom: .5rpx dotted #bbb;
    border-left: .5rpx dotted #bbb;
}

.matts :nth-child(3) {
    width: 29rpx;
    height: 30rpx;
    border-top: .5rpx dotted #bbb;
    border-right: .5rpx dotted #bbb;
}

.matts :nth-child(4) {
    width: 29rpx;
    height: 30rpx;
    border-top: .5rpx dotted #bbb;
    border-left: .5rpx dotted #bbb;
}

.spell {
    display: flex;
    width: 90%;
    height: 40rpx;
    margin: 0 auto;
    margin-top: 40rpx;
    text-align: center;
}

.spell view {
    width: 71rpx;
    font-size: 22rpx;
    margin-right: 10rpx;
}

.words_ {
    display: flex;
    width: 90%;
    margin: 0 auto;
}

.paraphrase {
    writing-mode: vertical-lr;
    border-right: 5rpx solid #000;
    padding-top: 20rpx;
}

.explanation {
    padding: 30rpx;
    font-family: 'Courier New', Courier, monospace
}